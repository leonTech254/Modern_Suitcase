<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeScreen"
    android:background="@drawable/bg1"
    android:padding="20sp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="100sp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suitcase"
            android:fontFamily="@font/great_vibes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="70sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place your"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Luxurious \nVacation"
            android:textSize="35sp"
            android:layout_marginBottom="30sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonWithIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button with Icon"
            app:icon="@drawable/chevron_right_24px"
            app:iconGravity="textEnd"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:textColor="@color/blue"
            app:iconTint="@color/blue"
            android:onClick="ToWelcome2"
            />

        <!-- Dots Container -->
        <LinearLayout
            android:id="@+id/dotsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Dot Views -->
            <ImageView
                android:id="@+id/dot1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/radio_button_checked_24px"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/dot2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/circle_24px"
                app:tint="@color/white"
                />

            <ImageView
                android:id="@+id/dot3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/circle_24px"
                app:tint="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
