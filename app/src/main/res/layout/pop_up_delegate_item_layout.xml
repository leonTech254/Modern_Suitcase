<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blue"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:orientation="vertical"
        >
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textAlignment="center"
           android:textColor="@color/light_brown"
           android:text="CONFIRM DETAILS"
           android:fontFamily="@font/lemon_font"
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
           <ImageView
               android:layout_width="40sp"
               android:layout_height="40sp"
               android:src="@drawable/shopping_bag_24px"
               app:tint="@color/white"
               />
           <TextView
               android:id="@+id/delegate_item_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Shoes"
               android:layout_gravity="center_vertical"
               />
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/shoppingmode_24px"
                app:tint="@color/white"
                />
            <TextView
                android:id="@+id/delegate_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shoes"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/description_24px"
                app:tint="@color/white"
                />
            <TextView
                android:id="@+id/delegate_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shoes"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/home_pin_24px"
                app:tint="@color/white" />
            <TextView
                android:id="@+id/delegate_item_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shoes"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/contact_to_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="share with: "
            android:textColor="@color/white"
            android:fontFamily="@font/lemon_font"
            android:textStyle="italic"
            />
    </LinearLayout>

    <Button
        android:id="@+id/delegate_send_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="share via SMS"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/dark_cyan"
        android:textColor="@color/white"
        style="@style/ThemeOverlay.Material3.Button.ElevatedButton"
        />
</LinearLayout>
